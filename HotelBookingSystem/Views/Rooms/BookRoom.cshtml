<div class="d-flex">
    <div class="container mt-5">
        <h2 class="mb-4">Request for Book</h2>
        <form >
            <input type="hidden" id="roomId" value="@ViewBag.RoomId" />
            <input type="hidden" id="userId" value="@ViewBag.UserId" />
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Enter Name">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Enter Email">
            </div>
            <div class="mb-3">
                <label for="phoneNumber" class="form-label">Phone Number</label>
                <input type="tel" class="form-control" id="phoneNumber" placeholder="Enter Phone Number">
            </div>
            <div class="mb-3">
                <label for="note" class="form-label">Note</label>
                <textarea class="form-control" id="note" rows="3" placeholder="Enter Note"></textarea>
            </div>


            <button type="button" onclick="SendData()" class="btn btn-primary">Book</button>
        </form>
    </div>
    <div>
        <img src="@ViewBag.ImagePath" />
    </div>
</div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
    function SendData() {

   
        var requestForBook = {
            Name: $('#name').val(),
            Email: $('#email').val(),
            PhoneNumber: $('#phoneNumber').val(),
            Note: $('#note').val(),
            roomId: $('#roomId').val(),   
            userId: $('#userId').val()
        };
        console.log(requestForBook)


        $.ajax({
            url: "/Rooms/BookRoomData",  
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(requestForBook), 
            success: function (response) {
                 window.location.href = '/';  

            },
            error: function () {
            
            }
        });
    }

    </script>


